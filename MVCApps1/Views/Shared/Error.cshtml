@if (Model != null)
{
    <div class="container">
        <p class="alert alert-danger">
            Error occurred in @Model.ControllerName in its @Model.ActionName method
            Error is @Model.Error
        </p>
        <a asp-action="@Model.ActionName" asp-controller="@Model.ActionName">
            Go Back
        </a>
    </div>
}
else{
    <div class="container">
        <p class="alert alert-danger">
            Error Occurred in @ViewData["Controller"] Controller in its @ViewData["Action"] action method.
            The Error is @ViewData["Error"]
        </p>
        <a asp-action="@ViewData["Action"]" asp-controller="@ViewData["Controller"]">
            Go Back

        </a>
    </div>
}
